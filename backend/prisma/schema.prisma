generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  username     String   @unique
  password     String
  role         Role     @default(SCRIBE)
  refreshToken String?
  createdAt    DateTime @default(now())

  ideas        Idea[] // üëà —Å–≤—è–∑—å —Å –∏–¥–µ—è–º–∏ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
}

model Idea {
  id          String     @id @default(uuid())
  title       String
  description String?
  status      IdeaStatus @default(DRAFT)
  tags        String[]
  type        IdeaType   @default(IDEA)
  authorId    String
  author      User       @relation(fields: [authorId], references: [id])
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

enum Role {
  SCRIBE
  WARDEN
}

enum IdeaStatus {
  DRAFT
  PUBLISHED
}

enum IdeaType {
  IDEA
  SCRIPT
  TASK
  NOTE
}